@model User

@{
	ViewBag.Title = "Login";
	Layout = "_Layout";
}

<partial name="_Breadcrumb" />
<div class="pt-95 pb-100">
	<div class="container">
		<div class="row">
			<div class="col-lg-8 col-md-12 offset-lg-2">
				<div class="tab-title">
					<a asp-action="Login">
						Login
					</a>
					<div class="bar"></div>
					<a asp-action="Register">
						Register
					</a>
				</div>
				<div class="tab-content">
					<form class="form" asp-action="HandleLogin" method="post">
						<div asp-validation-summary="All" class="text-danger form-error"></div>
						<div class="form-group">
							<input asp-for="Username" class="form-control rounded-3" placeholder="Username" />
							<span asp-validation-for="Username" class="form-text text-danger"></span>
						</div>
						<div class="form-group">
							<input asp-for="Password" class="form-control rounded-3" placeholder="Password" />
							<span asp-validation-for="Password" class="form-text text-danger"></span>
						</div>
						<button type="submit" class="btn btn-hover">Login</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}