@model User;
@{
  ViewBag.Title = "Details User";
}

<div class="container pt-4">
  <h1>Details</h1>
  <h4>User</h4>
  <hr />
  <div>
    <dl class="row">
      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
      </dt>
      <dd class="col-sm-10">
        @Model.Id
      </dd>

      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Username)
      </dt>
      <dd class="col-sm-10">
        @Model.Username
      </dd>

      <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.CreatedAt)
      </dt>
      <dd class="col-sm-10">@Model.CreatedAt</dd>
      @if (Model.Addresses?.Count() > 0)
      {
        <dt class="col-sm-2">
          @Html.DisplayNameFor(model => model.Addresses)
        </dt>
        <dd class="col-sm-10">
          <table class="table table-responsive table-light table-hover">
            <thead>
              <tr>
                <th>@Html.DisplayNameFor(model => model.Addresses.First().Id)</th>
                <th>@Html.DisplayNameFor(model => model.Addresses.First().Ward)</th>
                <th>@Html.DisplayNameFor(model => model.Addresses.First().District)</th>
                <th>@Html.DisplayNameFor(model => model.Addresses.First().City)</th>
                <th>@Html.DisplayNameFor(model => model.Addresses.First().Detail)</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var address in Model.Addresses)
              {
                <tr>
                  <td>@address.Id</td>
                  <td>@address.Ward</td>
                  <td>@address.District</td>
                  <td>@address.City</td>
                  <td>@address.Detail</td>
                </tr>
              }
            </tbody>

          </table>
        </dd>
      }

    </dl>
  </div>

  <p>
    @Html.ActionLink("Edit", "EditUser", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Users")
  </p>
</div>